	<body>
		<div class="container">
			<%= form_for :schedule, url: schedules_path do |f| %>
				<% if @schedule.errors.any? %>
				<div class="errors">
					<h2>The following <%= pluralize(@schedule.errors.count, "error") %> prohibited this
						schedule from being saved:</h2>
						<ul>
							<% @schedule.errors.full_messages.each do |message| %>
							<li><%= message %></li>
							<% end %>
						</ul>
				</div>
				<% end %>
				<p>
			    <%= f.label :title %>
			    <%= f.text_field :title %>
				</p>

				<p>
				<%= f.label :date %>
				<%= f.date_select :date %>
				</p>

				<p>
			  	<%= f.label :category %>
			  	<%= f.select :category, options_for_select(['Honors Chemistry', 'Regular Chemistry']) %>
				</p>

			  	<p>
			    <%= f.label :content %><br>
			    <%= f.text_area :content, :class => 'ckeditor' %>
			  	</p>

			  	<p>
			    <%= f.submit %>
			  	</p>
			<% end %>
		</div>
		<!-- jQuery -->
		<script src="//code.jquery.com/jquery.js"></script>
		<!-- Bootstrap JavaScript -->
		<script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>